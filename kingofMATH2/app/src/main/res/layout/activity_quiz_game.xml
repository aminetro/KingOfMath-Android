<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/templateouiz"
    tools:context="com.example.admin.kingofmath.QuizGame"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:text="score = "
    android:textSize="25dp"
    android:textColor="#fff"
    android:id="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/score"
        android:gravity="center"
        android:text="score = "
        android:textSize="25dp"
        android:textColor="#fff"
        />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/result"
        android:layout_marginBottom="140dp"
        android:src="@drawable/compteur3" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/myImageView"
        android:layout_alignTop="@id/myImageView"
        android:layout_alignRight="@id/myImageView"
        android:layout_alignBottom="@id/myImageView"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000" />


    <TextView android:layout_width="100dp" android:layout_height="wrap_content"
        android:id="@+id/power"
        android:text="Title"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_above="@+id/result"
        android:layout_alignLeft="@+id/timer"
        android:layout_alignStart="@+id/timer" />
    <TextView android:layout_width="100dp" android:layout_height="wrap_content"
        android:id="@+id/result"
        android:text="Title"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignRight="@+id/power"
        android:layout_alignEnd="@+id/power"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView">

        <Button
            android:id="@+id/Button1"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callQuiz"
            android:text="Reponse1"
            android:textColor="@android:color/black" >
        </Button>

        <Button
            android:id="@+id/Button2"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callQuiz"
            android:text="Reponse2"
            android:textColor="@android:color/black" >
        </Button>


        <Button
            android:id="@+id/Button3"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callQuiz"
            android:text="Reponse3"
            android:textColor="@android:color/black" >
        </Button>

        <Button
            android:id="@+id/Button4"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="callQuiz"
            android:text="Reponse4"
            android:textColor="@android:color/black" >
        </Button>
    </LinearLayout>

</RelativeLayout>
