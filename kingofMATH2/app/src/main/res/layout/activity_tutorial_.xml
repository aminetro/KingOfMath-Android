<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b8"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    tools:context="com.example.admin.kingofmath2.Acitivities.Tutorial_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="165px"
                android:layout_height="150px"
                android:background="@drawable/plustuto"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ButtonAdd"/>
            <Button
                android:layout_width="165px"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/moinstuto"
                android:id="@+id/ButtonSous"/>
            <Button
                android:layout_width="165px"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/quizzitem4"
                android:id="@+id/ButtonMulti"/>
            <Button
                android:layout_width="165px"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/quizzitem6"
                android:id="@+id/ButtonDivi"/>
        </LinearLayout>
        <ImageView
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70px"
            android:id="@+id/ImgTuto"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px">
            <Button
                android:layout_width="250px"
                android:layout_height="150px"
                android:layout_gravity="left"
                android:background="@drawable/button"
                android:text="Previous"
                android:textColor="@android:color/black"
                android:id="@+id/ButtonPrev" />


            <Button
                android:layout_width="250px"
                android:layout_height="150px"
                android:layout_gravity="left"
                android:background="@drawable/button"
                android:text="Next"
                android:textColor="@android:color/black"
                android:layout_marginLeft="90px"
                android:id="@+id/ButtonNext"
                />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>